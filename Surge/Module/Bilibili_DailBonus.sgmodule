[Script]
Manga = type=http-request,https:\/\/manga\.bilibili\.com\/.*\.User\/GetWallet,max-size=0,script-path=https://raw.githubusercontent.com/NobyDa/Script/master/Bilibili-DailyBonus/Manga.js
Manga = script-path=https://raw.githubusercontent.com/NobyDa/Script/master/Bilibili-DailyBonus/Manga.js,cronexp=0 9 * * *,type=cron

[MITM]
hostname = %APPEND% manga.bilibili.com
